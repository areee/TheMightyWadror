<p id="notice"><%= notice %></p>

<h1>Listing Memberships</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th>User</th>
    <th>Beerclub</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.user.username, user_path(membership.user_id) %></td>
        <td><%= link_to membership.beerclub.name, beerclub_path(membership.beerclub_id) %></td>
        <td><%= link_to 'Show', membership %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class: "btn btn-primary" %>
