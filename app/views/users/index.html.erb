<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table">
<thead>
  <tr>
    <th>Username</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>

        <% unless user.banned  %>
           <td></td>
        <% else %>
           <td><span class="label label-info">account frozen</span></td>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>
