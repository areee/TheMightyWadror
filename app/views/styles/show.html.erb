<p id="notice"><%= notice %></p>

<h1><%= @style.name %></h1>

<blockquote>
  <%= @style.description %>
</blockquote>

<h3>beers</h3>

<ul>
  <% @style.beers.each do |beer| %>
      <li>
        <%= link_to beer.name, beer_path %>
        <em>
          <%= link_to beer.brewery.name, beer.brewery %>
        </em>
      </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_style_path(@style), class:"btn btn-primary" %>
<%= link_to 'Destroy the style', @style, class:"btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
