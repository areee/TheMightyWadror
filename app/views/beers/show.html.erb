<p id="notice"><%= notice %></p>

<h2><%= @beer %></h2>

<p>
  <strong>Style:</strong>
  <%= link_to @beer.style.name, @beer.style %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      beer has not yet been rated!
  <% else %>
      beer has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= @beer.average_rating %>
  <% end %>
</p>


<% if current_user %>

    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class: "btn btn-primary" %>
    <% end %>

    <%= link_to 'Edit', edit_beer_path(@beer), class:"btn btn-primary" if current_user %>
    <%= link_to 'Destroy the beer', @beer, class:"btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>