<p id="notice"><%= notice %></p>

<h2>
  <%= "#{@beerclub.name} #{@beerclub.city}" %>
</h2>

<p>
  Founded <%= @beerclub.founded %>
</p>

<% if @beerclub.members.any? %>


    <h3>Members</h3>

    <ul>
      <% @beerclub.members.each do |member| %>
          <li>
            <%= link_to member.username, member %>
          </li>
      <% end %>
    </ul>

<% else %>

    <p>
      no members
    </p>

<% end %>

<% if current_user %>

    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beerclub_id %>
        <%= f.submit value: "join the club" %>
    <% end %>
<% end %>

<%= link_to 'Edit', edit_beerclub_path(@beerclub) if current_user %><br>
<%= link_to 'Destroy the club', @beerclub, method: :delete, data: {confirm: 'Are you sure?'} if current_user %>
