<p id="notice"><%= notice %></p>

<h1>Listing Beerclubs</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Founded</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @beerclubs.each do |beerclub| %>
      <tr>
        <td><%= link_to beerclub.name, beerclub %></td>
        <td><%= beerclub.city %></td>
        <td><%= beerclub.founded %></td>
        <!--<td><%= link_to 'Edit', edit_beerclub_path(beerclub) if current_user %></td>-->
        <!--<td><%= link_to 'Destroy', beerclub, method: :delete, data: {confirm: 'Are you sure?'} if current_user %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beerclub', new_beerclub_path, class: 'btn btn-primary' if current_user %>
